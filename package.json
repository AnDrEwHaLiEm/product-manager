{
  "name": "product-manager",
  "version": "1.0.0",
  "main": "public/electron.js",
  "homepage": ".",
  "author": {
    "name": "Andrew Haliem",
    "email": "an.roooof@gmail.com"
  },
  "scripts": {
    "start": "concurrently \"BROWSER=none yarn react-start\" \"wait-on http://localhost:3000 && electron .\"",
    "react-start": "react-scripts start",
    "build": "react-scripts build",
    "dist": "NODE_OPTIONS=--openssl-legacy-provider electron-builder",
    "postinstall": "electron-builder install-app-deps && electron-rebuild",
    "rebuild": "electron-rebuild -f -w sqlite3"
  },
  "dependencies": {
    "@emotion/react": "^11.7.1",
    "@emotion/styled": "^11.6.0",
    "@mui/material": "^5.2.1",
    "better-sqlite3": "^10.0.0",
    "electron-is-dev": "^3.0.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-scripts": "4.0.3"
  },
  "devDependencies": {
    "concurrently": "^6.2.1",
    "electron": "^23.1.1",
    "electron-builder": "^23.1.1",
    "electron-rebuild": "^3.2.9",
    "wait-on": "^5.3.0"
  },
  "build": {
    "appId": "com.yourcompany.productmanager",
    "files": [
      "build/**/*",
      "public/**/*",
      "src/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "build"
    },
    "mac": {
      "category": "public.app-category.productivity"
    },
    "win": {
      "target": "nsis",
      "publisherName": "Your Company"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Utility"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
